<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="ClientApp" Height="300" Width="300">
    <DockPanel>
        <TextBlock Margin="10" Text="Welcome Visitor" FontSize="16" DockPanel.Dock="Top" />
        <DockPanel Margin="5" DockPanel.Dock="Top">
            <TextBlock Margin="5" Text="Name:" DockPanel.Dock="Left" />
            <Button Name="readButton" Margin="5" Content="Read" Click="readButton_Click" DockPanel.Dock="Right" />
            <TextBox Name="nameTextBox" Margin="5" />
        </DockPanel>
        <DockPanel Margin="10">
            <TextBlock Text="Comment" DockPanel.Dock="Top" />
            <Button Name="writeButton" Content="Write" Click="writeButton_Click" HorizontalAlignment="Left" DockPanel.Dock="Bottom" />
            <TextBox Name="commentTextBox" AcceptsReturn="True" />
        </DockPanel>                   
    </DockPanel>
</Window>
